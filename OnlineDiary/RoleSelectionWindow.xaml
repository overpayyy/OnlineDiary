<Window x:Class="OnlineDiary.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Role" WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="#F5F5F5" ResizeMode="NoResize">

    <Grid>
        <Border Width="600" Height="400"
                Background="White"
                CornerRadius="20"
                Padding="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock Text="Who are you?" FontSize="36" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >

                    <Button x:Name="StudentButton" Width="120" Height="120" Margin="20"
                            Background="#FFA500" BorderThickness="0"
                            Click="StudentButton_Click" Cursor="Hand"
                            ToolTip="I'm a Student">
                        <StackPanel>
                            <Image Source="Resources/student.png" Width="60" Height="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="Student" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="TeacherButton" Width="120" Height="120" Margin="20"
                            Background="#32CD32" BorderThickness="0"
                            Click="TeacherButton_Click" Cursor="Hand"
                            ToolTip="I'm a Teacher">
                        <StackPanel>
                            <Image Source="Resources/teacher.png" Width="60" Height="60" HorizontalAlignment="Center"/>
                            <TextBlock Text="Teacher" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
